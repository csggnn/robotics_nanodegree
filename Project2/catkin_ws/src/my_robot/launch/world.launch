<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <!-- World File. This definition just sets a default world file name -->
  <arg name="world_file" default="$(find my_robot)/worlds/empty.world"/>

  <!-- Launch Gazebo World. The first include line is where most magic happens. The last line adds the world configuration specidies by word_file -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

</launch>
